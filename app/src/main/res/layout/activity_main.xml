<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.bwelco.demo.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/start_proxy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_proxy" />


        <Button
            android:id="@+id/stop_proxy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stop_proxy" />

        <Button
            android:text="@string/install_cert"
            android:id="@+id/install_cert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>